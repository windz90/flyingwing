<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/topBarLinLay"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/Black"
	android:gravity="center"
	android:baselineAligned="false">
    <LinearLayout
        android:id="@+id/topBarLinLayLeftLinLay"
        android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="3"
	    android:gravity="left|center_vertical">
		<ImageButton
			android:id="@+id/topBarLinLayLeft"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/Transparent"
			android:paddingLeft="10dip"
			android:adjustViewBounds="true"
			android:scaleType="fitCenter"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/topBarLinLayCenterLinLay"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="2"
		android:gravity="center">
		<TextView
			android:id="@+id/topBarLinLayCenter"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/White"
			android:textSize="20sp"
			android:singleLine="true"
			android:ellipsize="end"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/topBarLinLayRightLinLay"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="3"
		android:gravity="right|center_vertical">
		<ImageButton
			android:id="@+id/topBarLinLayRight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/Transparent"
			android:paddingRight="10dip"
			android:adjustViewBounds="true"
			android:scaleType="fitCenter"/>
	</LinearLayout>
</LinearLayout>